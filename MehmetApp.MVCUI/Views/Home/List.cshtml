@using MehmetApp.MVCUI.Models
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}

<div class="container pb-5 pt-5">

    <div class="row">

        <div class="col-md-3">

            @Html.Action("GetCategories","Home")

        </div>

        <div class="col-md-9">
            
            @if (Model.Count()>0)
            {
                <div class="alert alert-warning" role="alert">
                    <strong>@Model.Count() Adet ürün bulundu.</strong>
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    <strong>
                        <i class="fa fa-exclamation-triangle" style="font-size: 10px;"></i> Hiçbir ürün bulunamadı.
                    </strong>
                </div>
            }

            @Html.Partial("_ProductList", Model)

        </div>

    </div>

    </div>
