@model IEnumerable<MehmetApp.MVCUI.Entity.Category>

@{

    var selectedCategory = Url.RequestContext.RouteData.Values["id"];

}


<ul class="list-group">
    
    
        <a href="/Home/List" class="list-group-item">
            Tüm kategoriler
        </a>
   

    @foreach (var category in Model)
    {

        if (selectedCategory!=null)
        {
            

            if (category.Id.Equals(int.Parse(selectedCategory.ToString())))
            {
                
                    <a href="/Home/List/@category.Id" class="list-group-item active">
                        <small><i class="fa fa-angle-double-right" style="font-size: 20px;"></i></small>@category.Name
                    </a>
                
            }
            else
            {
                
                    <a href="/Home/List/@category.Id" class="list-group-item">
                        <small><i class="fa fa-angle-double-right" style="font-size: 20px;"></i></small>@category.Name
                    </a>
                  
            }

        }
        else
        {
            
                <a href="/Home/List/@category.Id"class="list-group-item">
                    <small><i class="fa fa-angle-double-right" style="font-size: 20px;"></i></small>@category.Name
                </a>
           
        }

        
        
    }
</ul>
