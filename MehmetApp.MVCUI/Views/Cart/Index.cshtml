@model MehmetApp.MVCUI.Models.Cart

@{
    ViewBag.Title = "Index";
}

<div class="container pb-5 pt-5">
    
    <h1>Alışveriş Sepeti</h1>
    <hr/>

    @if (Model.CartLines.Count > 0)
    {


        <div class="row">
            <div class="col-md-12">

                <h2>Alışveriş Sepeti</h2>
                <hr />

                <table class="table table-bordered">

                    <thead>
                        <tr>
                            <th></th>
                            <th>Miktar</th>
                            <th>Ürün İsmi</th>
                            <th>Ürün Fiyatı</th>
                            <th>Fiyat</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var line in Model.CartLines)
                        {
                            <tr>
                                <td>
                                    <img src="~/Upload/@line.Product.Image" style="width: 90px;" />
                                </td>
                                <td>
                                    @line.Quantity
                                </td>
                                <td>
                                    @line.Product.Name
                                </td>
                                <td>
                                    @line.Product.Price
                                </td>
                                <td>
                                    @((line.Product.Price * line.Quantity).ToString("c"))
                                </td>
                                <td>
                                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                    {

                                        @Html.Hidden("Id", line.Product.Id)
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa fa-trash" style="font-size: 28px;"></i>
                                            Sil
                                        </button>

                                    }
                                </td>
                            </tr>
                        }


                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5"></td>
                            <td> @Model.TotalPrice().ToString("C")</td>
                        </tr>
                    </tfoot>

                </table>


            </div>
        </div>

        <div class="text-center">
            
            <a href="/Home/List" class="btn btn-primary">
                <i class="fa fa-arrow-circle-left" style="font-size: 20px;"></i> Alışverişe Devam Et
            </a>
            <a href="/Cart/Checkout" class="btn btn-success">Alışverişi Tamamla</a>

        </div>
        

    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <i class="fa fa-exclamation-circle" style="font-size: 20px;"> Alışveriş Sepetinizde Ürün Bulunmamaktadır.</i>
        </div>
    }


    </div>

